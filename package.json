{
  "name": "micro-graphql",
  "version": "1.0.0",
  "main": "lib/index.js",
  "module": "lib/es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jquense/micro-graphql.git"
  },
  "author": "Jason Quense",
  "license": "MIT",
  "scripts": {
    "build": "4c build src",
    "prepublishOnly": "yarn run build",
    "tdd": "jest --watch",
    "parser": "pegjs --optimize size -o src/parser.js grammar.pegjs ",
    "pretest": "yarn run parser",
    "test": "yarn lint && jest",
    "testonly": "jest",
    "lint": "4c lint src './*'",
    "format": "4c format src './*'",
    "release": "4c release"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@4c/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "yarn 4c lint --fix"
  },
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "jsdom"
  },
  "release": {
    "publishDir": "lib"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.1.0",
    "@4c/cli": "^2.0.1",
    "@4c/import-sort": "^4.3.3",
    "@4c/jest-preset": "^1.3.0",
    "@4c/prettier-config": "^1.1.0",
    "@4c/tsconfig": "^0.3.0",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "eslint": "^6.8.0",
    "eslint-config-4catalyzer-jest": "^2.0.1",
    "eslint-config-4catalyzer-typescript": "^1.1.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "pegjs": "^0.10.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2"
  }
}
